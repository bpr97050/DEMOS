/*
 * Экранный редактор eda  ver 2.4
 *   Автор: Антонов В.Г. ВМК МГУ, ИПК Минавтопрома
 *   Последняя модификация: 11.03.1985
 */

/* Параметры для терминала ВТА2000-15М в режиме НАБОР1 (ВАРИАНТ1) */

#define NLIN    24                /* Число строк                     */
#define SWID    132               /* Ширина экрана                   */
#define SYMSTRT "\033\134\033m"   /* Старт. пoследовательность       */
#define SYMSTOP  "\033n"          /* Установка обычных параметров    */
#define ROLL    0                 /* Терминал работает со скроллингом*/
#define VS      "\0336"           /* Включить выделение              */
#define VE      "\0337"           /* Выключить выделение             */
/* Коды клавиатуры */

#define F_right "\033C"        /* Вправо                             */
#define F_left  "\033D"        /* Влево                              */
#define F_up    "\033A"        /* Вверх                              */
#define F_down  "\033B"        /* Вниз                               */
#define F_il    "\033L"        /* Вставить строку                    */
#define F_dl    "\033M"        /* Удалить строку                     */
#define F_ic    "\033@@"        /* Вставить символ                    */
#define F_dc    "\033P"        /* Удалить символ                     */
#define F_del   "\177"         /* Забой                              */
#define F_tab   "\011"         /* Табуляция вперед               (ГТ)*/
#define F_btab  "\010"         /* Табуляция назад                (ВШ)*/
#define F_wtab  "\033J"        /* Табуляция вправо по словам         */
#define F_bwtab "\033K"        /* Табуляция влево по словам          */
#define F_exit  "\033#M\033#M\033#M"/* Нормальный выход(тех.ВК-3раза)*/
#define F_rew   "\033E"        /* Перерисовка экрана                 */
#define F_na    "\033#9"       /* Ввод числового аргумента     (тех9)*/
#define F_lnum  "\033#8"       /* Выдать номер текущей строки  (тех8)*/
#define F_cnum  "\033#7"/* Выдать номер текущей позиции в строке (т7)*/
#define F_ret   "\033G\033G"   /* Установить в начало строки         */
#define F_cr    "\015"          /*Возврат каретки                    */
#define F_aex   "\012\177"     /* Аварийный выход             (ПС,ЗБ)*/
#define F_inter "\003"         /* Прерывание                   (УС/С)*/
#define F_flush "\033G\033E"   /* Отключение вывода на экран         */
#define F_fsd   "\033#.\033#P" /* Установка подстроки поиска (т.,кф1)*/
#define F_find  "\033#P"       /* Поиск                         (кф1)*/
#define F_fsd2  "\033#.\033#Q" /* Второй шаблон поиска       (т.,кф2)*/
#define F_find2 "\033#Q"       /* Поиск по второму шаблону      (кф2)*/
#define F_savel "\033#4"       /* Запоминание строки в буфере  (тех4)*/
#define F_incll "\033#5"       /* Вставка буфера в текст       (тех5)*/
#define F_wrtex "\033#.\033#5" /* Запись буфера в файл  (тех".",тех5)*/
#define F_rdtex "\033#.\033#4" /* Заполнение буфера из файла  (т.,т4)*/
#define F_clrtx "\033#.\033#6" /* Очистка буфера       (тех.".",тех6)*/
#define F_end   "\033G\033C"   /* В конец строки по непробелам (H,->)*/
#define F_beg   "\033G\033D"   /* В начало строки по непробелам(H,<-)*/
#define F_pgup  "\033H"        /* Страница вверх       ()            */
#define F_pgdown "\033F"       /* Страница вниз        ()            */
#define F_shell "\033#-"       /* Вызов интерпретатора shell (тех.- )*/
#define F_sins  "\033#.\033#0" /* Режим вставки       (тех.".",тех.0)*/
#define F_sdel  "\033#0"       /* Режим замены                (тех.0)*/
#define F_tof   "\033G\033A"   /* В начало файла         ()          */
#define F_eof   "\033G\033B"   /* В конец файла          ()          */
#define F_cat   "\033Q"        /* Склеивание/разрезание строк   (ВЗС)*/
#define F_rpt   "\033#.\033#." /* Повторить пред. команду (тех."."2р)*/
#define F_store "\033#.\033#M" /* Запомнить изменения (тех".",тех.ВК)*/
#define F_pmode "\033#,"       /* Редактирование программ        (т,)*/
#define F_tmode "\033#.\033#," /* Редактирование текстов      (т.,т,)*/
#define F_parup "\033G\033M"   /* На параграф вверх                  */
#define F_pardown "\033G\033L" /* На параграф вниз                   */
#define F_format  "\033G\033@@" /*  Форматирование абзаца             */
#define F_mdef1 "\033#R\033#1" /* Определить макро 1       (КФ3,УС/1)*/
#define F_mdef2 "\033#R\033#2" /* Определить макро 2           ,УС/2)*/
#define F_mdef3 "\033#R\033#3" /* Определить макро 3           ,УС/3)*/
#define F_m1    "\033#1"       /* Выполнить макро 1            (УС/1)*/
#define F_m2    "\033#2"       /* Выполнить макро 2            (УС/2)*/
#define F_m3    "\033#3"       /* Выполнить макро 3            (УС/3)*/
#define FS_mdend "\033#S"      /*Символ конца определения макро (КФ4)*/

#define Mname1  '1'            /* Имя макро 1 */
#define Mname2  '2'            /* Имя макро 2 */
#define Mname3  '3'            /* Имя макро 3 */

/* Управляющие символы терминала */

#define S_right "\033C"        /* Вправо курсор */
#define S_left  "\033D"        /* Влево курсор */
#define S_up    "\033A"        /* Вверх курсор */
#define S_down  "\033B"        /* Вниз курсор */
#define S_ic    "\033@@"        /* Вставить символ */
#define S_dc    "\033P"        /* Удалить символ */
#define S_ret   "\015"         /* Возврат каретки */
#define S_cr    "\015\012"     /* Возврат каретки/перевод строки */
#define S_home  "\033H"        /* В начало экрана */
#define S_clrl  "\033K"/* Очистка строки (курсор в начале строки) */
#define S_clrel "\033K"       /* Очистка конца строки */
#define S_erase "\033E"        /* Очистка экрана */
#define S_bell  "\007"         /* Звонок */
#define S_il    "\033L"
#define S_dl    "\033M"

#define S_pos   "\033Y  "          /* Последовательность прямого */
#define POSX    2                  /* позиционирования */
#define POSY    3                  /*    см. pos.c     */
@


